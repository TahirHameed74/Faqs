<%- include('./partials/admin-header.ejs') %>

<body>
    <%- include('./partials/admin-nav.ejs') %>
    

    <div class="col-md-6 col-md-offset-3">
        <div class="well bs-component"
            style="border-radius: 5px; box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);">
            <form id="newCategoryForm" class="form-horizontal" method="POST" action="/admin/new-category">
                <fieldset>
                    <legend>Add New Category</legend>

                    <div class="alert alert-danger" 
                    <% if (error.length == 0) { %>
                        style="display: none"
                    <% } %>
                    id='erralert'>
                        <button type="button" class="close" onclick="$('#erralert').hide()">&times;</button>
                        <strong id='errortxt'><%= error[0] %></strong>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-lg-2 control-label">Category Title</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="title" placeholder="Title" name="title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="icon" class="col-lg-2 control-label">Icon</label>
                        <div class="col-lg-10">
                            <div data-align="left" name="icon" data-unselected-class="btn-default" data-arrow-class="btn-primary" data-arrow-prev-icon-class="fas fa-angle-left" data-arrow-next-icon-class="fas fa-angle-right" role="iconpicker"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="reset" class="btn btn-default">Reset</button>
                            <button type="submit" id="newCategoryFormSubmit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>



    <%- include('./partials/admin-footer.ejs') %>

</body>

</html>